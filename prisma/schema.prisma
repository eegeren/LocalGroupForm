generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum Status {
  PENDING
  REVIEWING
  ACCEPTED
  REJECTED
}

model Submission {
  id                String   @id @default(cuid())
  fullName          String
  phone             String?
  gender            String?
  address           String?
  birthDate         DateTime?
  positionApplied   String?
  workType          String?   // sabit | sezonluk | gunluk | parttime
  shiftAvailability String?
  educationLevel    String?
  foreignLanguages  String?
  prevCompany       String?
  prevTitle         String?
  prevDuration      String?
  prevReason        String?
  message           String
  consent           Boolean  @default(false)

  status            Status   @default(PENDING)
  archived          Boolean  @default(false)

  createdAt         DateTime @default(now())
}
